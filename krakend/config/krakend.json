{
    "$schema": "https://www.krakend.io/schema/v3.json",
    "version": 3,
    "name": "KrakenD - API Gateway",
    "plugin": {
      "pattern": ".so",
      "folder": "/etc/krakend/plugins/"
    },
    "endpoints": [{
      "endpoint": "/jwt",
      "method": "POST",
      "backend": [{
          "url_pattern": "/__debug/jwt",
          "host": ["http://localhost:8080"]
      }],
      "extra_config": {
          "proxy": {
              "static": {
                  "strategy": "always",
                  "data": {
                    "access_token": {
                        "aud": "http://api.example.com",
                        "iss": "https://krakend.io",
                        "sub": "1234567890qwertyuio",
                        "jti": "id",
                        "exp": 0
                    },
                    "refresh_token": {
                        "aud": "http://api.example.com",
                        "iss": "https://krakend.io",
                        "sub": "1234567890qwertyuio",
                        "jti": "id",
                        "exp": 0
                    }
                }
              }
          }
        }
      },{
        "endpoint": "/token",
        "method": "POST",
        "backend": [
          {
            "url_pattern": "/jwt",
            "host": ["http://localhost:8080"]
          }
        ],
        "extra_config": {
            "auth/signer": {
                "alg": "HS256",
                "kid": "sim2",
                "keys_to_sign": ["access_token", "refresh_token"],
                "jwk_url": "http://backend:8000/jwk",
                "disable_jwk_security": true
            }
        }
      },{
      "endpoint": "/auth/google",
      "output_encoding": "no-op",
      "backend": [{
          "url_pattern": "/__debug",
          "host":["https://localhost:8080"],
          "encoding": "no-op",
          "extra_config": {
            "plugin/http-client": {
              "name": "google-auth",
              "google-auth": {
                "path": "/__debug"
              }
            }
          }
      }]
  },{
    "endpoint": "/auth/google/code",
    "input_query_strings": ["*"],
    "input_headers": ["*"],
    "output_encoding": "no-op",
    "backend": [{
        "url_pattern": "/__debug",
        "host":["https://localhost:8080"],
        "encoding": "no-op",
        "extra_config": {
          "plugin/http-client": {
            "name": "google-code",
            "google-code": {
              "path": "/__debug"
            }
          }
        }
    }]
},{
    "endpoint": "/send",
    "method": "POST",
    "input_query_strings": [
      "*"
    ],
    "input_headers": [
      "*"
    ],
    "backend": [
      {
        "url_pattern": "/send",
        "host": ["http://backend:8000"]
      }
    ],                                                                                                                                                                    
    "extra_config": {
        "auth/validator": {
            "alg": "HS256",
            "audience": ["http://api.example.com"],
            "roles_key": "http://backend:8000/roles",
            "roles": ["user"],
            "jwk_url": "http://backend:8000/jwk",
            "cache": true,
            "disable_jwk_security": true
        }
    }
  },{
    "endpoint": "/send-all",
    "method": "POST",
    "backend": [
      {
        "url_pattern": "/send-all",
        "host": ["http://backend:8000"]
      }
    ]
  },{
    "endpoint": "/save-template",
    "method": "POST",
    "backend": [
      {
        "url_pattern": "/save-template",
        "host": ["http://backend:8000"]
      }
    ]
  }]
}
